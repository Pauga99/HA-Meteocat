{
  "name": "Meteocat - Predicció per municipi",
  "version": "1.0.0",
  "slug": "meteocat_prediccio",
  "description": "Publica la predicció del temps de Meteocat a Home Assistant via MQTT.",
  "url": "https://github.com/EL_TEU_USUARI/HA-Meteocat",
  "arch": [
    "aarch64",
    "amd64",
    "armv7",
    "i386"
  ],
  "startup": "services",
  "boot": "auto",
  "host_network": false,
  "homeassistant_api": false,
  "hassio_api": false,
  "init": false,
  "ingress": false,
  "panel_icon": "mdi:weather-partly-cloudy",
  "options": {
    "api_key": "",
    "codi_municipi": "",
    "nom_municipi": "",
    "mqtt_host": "core-mosquitto",
    "mqtt_port": 1883,
    "mqtt_usuari": "",
    "mqtt_contrasenya": "",
    "interval_minuts": 30,
    "https": true
  },
  "schema": {
    "api_key": "str",
    "codi_municipi": "str",
    "nom_municipi": "str?",
    "mqtt_host": "str",
    "mqtt_port": "port",
    "mqtt_usuari": "str?",
    "mqtt_contrasenya": "password?",
    "interval_minuts": "int(5,720)",
    "https": "bool"
  },
  "image": "local/meteocat-{arch}",
  "environment": {
    "LOG_LEVEL": "info"
  }
}
